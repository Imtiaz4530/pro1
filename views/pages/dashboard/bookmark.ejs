<%- include('../../partials/head.ejs') %>
<div class="container-fluid">
    <div class="row">   
        <div class="col md-2">
            <%- include('../../partials/sidebar.ejs') %>
        </div>
            <div class="col-md-10 mydiv3-5">
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <div class="card card-body my-5">
                            <h5>Bookmarks</h5>
                            <div class="row mt-4">
                                <% if(posts.length === 0){ %>
                                    <div class="text-center text-muted">
                                        <p>No bookmark available</p>
                                    </div>
                                <%} else {%>
                                    <% for (let post of posts.reverse()) {%>
                                        <div class="card col-sm-3 m-3">
                                            <% if(post.thumbnail){ %>
                                                <img src="<%= post.thumbnail %>" alt="Post thumbnail" class="card-img-top mt-3">
                                            <% } %>
                                            <div class="card-body">
                                                <a href="/explorer/<%= post._id %>" style="color: #222;"><h5><%= post.title %> </h5></a>
                                            </div>
                                        </div>
                                    <% } %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
<%- include('../../partials/footer.ejs') %>
</body>
</html>