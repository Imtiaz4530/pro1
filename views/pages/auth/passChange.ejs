<%- include('../../partials/head.ejs') %>
<div class="container-fluid">
    <div class="row">   
        <div class="col md-2">
            <%- include('../../partials/sidebar.ejs') %>
        </div>
            <div class="col-md-10 mydiv3-5">
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <div class="card card-body my-5">
                            <h5>Change password</h5>
                            <form action="/auth/change-password" method="POST">
                                <div class="form-group">
                                  <label for="oldpassword" class="form-label my-1">Enter your old password</label>
                                  <input type="password" name="oldpassword" class="form-control" id="oldpassword">
                                </div>
                                <div class="form-group">
                                  <label for="newpassword" class="form-label my-1">Enter your new password</label>
                                  <input type="password" class="form-control" name="newpassword" id="newpassword">
                                </div>
                                <div class="form-group">
                                    <label for="confirmpassword" class="form-label my-1">Confirm your password</label>
                                    <input type="password" class="form-control" name="confirmpassword" id="confirmpassword">
                                </div>
                                <input type="submit" value="Update password" class="btn btn-dark my-3">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>
<%- include('../../partials/footer.ejs') %>
</body>
</html>